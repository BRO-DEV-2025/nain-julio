---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <a class="logo" href="/">
      <img loading="lazy" src="/favicon.svg" alt="Movimiento Ciudadano" />
    </a>
    <div class="internal-links">
      <HeaderLink href="/">INICIO</HeaderLink>
      <HeaderLink href="/propuestas">PROPUESTAS</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://www.facebook.com/NainJulioGarcia" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Sígueme en Facebook</span>
        <svg viewBox="0 0 24 24" width="32" height="32" aria-hidden="true">
          <path fill="white" d="M12 2.04c-5.52 0-10 4.48-10 10 0 4.99 3.66 9.12 8.44 9.88v-6.99h-2.54v-2.89h2.54v-2.2c0-2.5 1.49-3.89 3.77-3.89 1.09 0 2.24.2 2.24.2v2.46h-1.26c-1.24 0-1.63.77-1.63 1.56v1.87h2.77l-.44 2.89h-2.33v6.99c4.78-.76 8.44-4.89 8.44-9.88 0-5.52-4.48-10-10-10z" />
        </svg>
      </a>

      <a href="https://www.instagram.com/nainjuliogarcia" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Sígueme en Instagram</span>
        <svg viewBox="0 0 24 24" width="32" height="32" aria-hidden="true">
          <path fill="white" d="M7.75 2h8.5C19.55 2 22 4.45 22 7.75v8.5c0 3.3-2.45 5.75-5.75 5.75h-8.5C4.45 22 2 19.55 2 16.25v-8.5C2 4.45 4.45 2 7.75 2Zm0 1.5c-2.3 0-4.25 1.95-4.25 4.25v8.5c0 2.3 1.95 4.25 4.25 4.25h8.5c2.3 0 4.25-1.95 4.25-4.25v-8.5c0-2.3-1.95-4.25-4.25-4.25h-8.5Zm10 1a.75.75 0 0 1 .1 1.5l-.1.01a.75.75 0 0 1-.1-1.5l.1-.01Zm-5.75 2.25a5 5 0 1 1 0 10 5 5 0 0 1 0-10Zm0 1.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Z" />
        </svg>
      </a>

      <a href="https://www.tiktok.com/@nain.julio.garcia" target="_blank" rel="noopener noreferrer">
        <span class="sr-only">Sígueme en TikTok</span>
        <svg viewBox="0 0 24 24" width="32" height="32" aria-hidden="true">
          <path fill="white" d="M9.75 2a.75.75 0 0 1 .75.75V16a3.25 3.25 0 1 1-3.25-3.25h.25V9.5h-.25a7.25 7.25 0 1 0 7.25 7.25V8.76a6.48 6.48 0 0 0 3.5 1.01h.25a.75.75 0 0 0 0-1.5h-.25a5 5 0 0 1-5-5V2.75a.75.75 0 0 0-.75-.75h-2.5Z" />
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    background: #e95511;
    padding: 0 1em;
    color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .logo img {
    filter: brightness(0) invert(1);
    height: 48px;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }

.internal-links {
  display: flex;
  gap: 2em;
  align-items: center;
}

.internal-links a {
  text-decoration: none;
  font-weight: bold;
  color: white;
}

  .social-links {
    display: flex;
    gap: 0.5em;
  }

  @media (max-width: 720px) {
    nav {
      flex-direction: column;
      align-items: center;
    }

    .internal-links {
      flex-wrap: wrap;
      justify-content: center;
    }

    .social-links {
      display: none;
    }

    .logo {
      display: none;
    }
  }
</style>
