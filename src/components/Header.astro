---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
    <nav>
        <!-- <h2><a href="/">{SITE_TITLE}</a></h2> -->
        <a class="logo" href="/">
            <img src="/favicon.svg" alt="Movimiento Ciudadano" />
        </a>
        <div class="internal-links">
            <HeaderLink href="/">INICIO</HeaderLink>
            <HeaderLink href="/propuestas">PROPUESTAS</HeaderLink>
            <HeaderLink href="/about">SOBRE MI</HeaderLink>
        </div>
        <div class="social-links">
            <a href="https://www.facebook.com/NainJulioGarcia" target="_blank">
                <span class="sr-only">Sigueme en facebook</span>
                <svg
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                    width="32"
                    height="32"
                    astro-icon="social/facebook"
                >
                    <path
                        fill="currentColor"
                        d="M12 2.04c-5.52 0-10 4.48-10 10 0 4.99 3.66 9.12 8.44 9.88v-6.99h-2.54v-2.89h2.54v-2.2c0-2.5 1.49-3.89 3.77-3.89 1.09 0 2.24.2 2.24.2v2.46h-1.26c-1.24 0-1.63.77-1.63 1.56v1.87h2.77l-.44 2.89h-2.33v6.99c4.78-.76 8.44-4.89 8.44-9.88 0-5.52-4.48-10-10-10z"
                    ></path>
                </svg>
            </a>
        </div>
    </nav>
</header>
<style>
    header {
        color: white;
        margin: 0;
        padding: 0 1em;
        background: #e95511;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    h2 {
        color: antiquewhite;
        margin: 0;
        font-size: 1em;
    }
    .logo {
        display: block;
    }
    /* Forzamos que la imagen del logo se muestre en blanco */
    .logo img {
        filter: brightness(0) invert(1);
    }
    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    nav a {
        padding: 1em 0.5em;
        color: var(--black);
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }
    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }
    .internal-links {
        display: flex;
        gap: 1em;
    }
    .social-links,
    .social-links a {
        display: flex;
    }
    @media (max-width: 720px) {
        /* Cambiar la dirección de la navegación a columna y centrar elementos */
        nav {
            flex-direction: column;
            align-items: center;
        }
        h2 {
            margin-bottom: 0.5em;
        }
        .internal-links {
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.5em;
        }
        /* Ocultar los social-links en pantallas menores a 720px */
        .social-links {
            display: none;
        }
        .logo {
            display: none;
        }
    }
</style>
