---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('planilla')).sort((a, b) => (a.data.order ?? 0) - (b.data.order ?? 0));
---

<!doctype html>
<html lang="es-mx">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: auto;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(33.33% - 1.5rem); /* Cambiado para 3 columnas */
				text-align: center; /* Centra el contenido dentro de cada elemento */
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: #e95511;
				line-height: 1;
			}
			.Cargo {
				text-align: center; /* Centra el texto de la clase Cargo */
				margin-top: 0.5rem;
				color: #333; /* Cambia el color del texto si es necesario */
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%; /* Cambia a 1 columna en pantallas peque√±as */
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{posts.map((post) => (
						<li>
							<a href={`/planilla/${post.id}/`}>
								<img loading="lazy" width={720} height={360} src={post.data.heroImage} alt="" />
								<div class="Cargo">
                                    <h3 class="title">{post.data.title}</h3>
                                    <h4 class="Cargo">{post.data.description}</h4>
                                </div>

							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
